---
ecmaFeatures:
  # allow return statements in the global scope
  globalReturn: true
  # enable modules
  modules: true

parser: babel-eslint

env:
  browser: false
  node: false
  es6: true

# 1 means warning
# 2 means error
rules:
  # possible errors
  comma-dangle: [2, 'always-multiline']
  valid-jsdoc: 1

  # best practices
  curly: [2, 'multi-line']
  guard-for-in: 2
  default-case: 2
  no-div-regex: 2
  no-eq-null: 2
  wrap-iife: 2
  no-undef-init: 0
  no-unused-vars: 1
  no-console: 0
  no-underscore-dangle: 0
  strict: [1, never]

  # es6
  no-var: 2

  # stylistic issues
  new-cap: 0
  indent: [1, 4]
  camelcase: 2
  comma-style: [1, last]
  comma-spacing: [1, {before: false, after: true}]
  key-spacing: [2, {beforeColon: false, afterColon: true}]
  quotes: [2, single, 'avoid-escape']
  consistent-this: [1, self]
  brace-style: [1, stroustrup]
  semi: [2, never]
